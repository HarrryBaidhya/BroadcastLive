@{
    ViewData["Title"] = "Schedule";
    Layout = "~/Views/Shared/BroadcastLayout.cshtml";
}



<!DOCTYPE html>
<html>
<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }
        #bg{
         position:relative;
         width:100%;
         height:100%;

        }

        #bg img{
           background-size:cover;
           background-position:left center;
           background-repeat:no-repeat;
            float:none;
           height:435px;
           width: 100%;        
        }
        .innerdiv{
            left:0;
            position:absolute;
            text-align:center;
            top:31px;
            width:100%;
            z-index:1;
            color:#f47c05;
            font-family:Arial;
            font-size:30px;
            padding-top:20px;
        }


    </style>
</head>
<body>
    <div id="bg">
        <img src="~/image/download.png" />
        <div class="innerdiv">
        <h1>Match Schedule</h1>

        <table style="width:100%">
            <tr>
                <th style="text-align:left">Match Day</th>
                <th style="text-align:left">Country</th>
                <th style="text-align:left">Time</th>
            </tr>
            <tr>
                <td>Sunday</td>
                <td>Argentina VS Brazil</td>
                <td>9.30am</td>
            </tr>
            <tr>
                <td>Monday </td>
                <td>England Vs Germany</td>
                <td>8pm</td>
            </tr>
        </table>
        </div>
    </div>
   

</body>
</html>
